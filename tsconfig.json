{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"],
      "~/app/*": ["./src/app/*"],
      "~/auth/*": ["./src/app/auth/*"],
      "~/types/*": ["./src/types/*"],
      "~/services/*": ["./src/services/*"],
      "~/components/*": ["./src/components/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/ui/*": ["./src/ui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest-setup.js",
    "jest.config.mjs"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
